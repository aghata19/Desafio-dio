class Heroi {
    constructor(nome, idade, tipo) {
        this.nome = nome;
        this.idade = idade;
        this.tipo = tipo;
    }

    atacar() {
        let ataque;

        switch (this.tipo) {
            case 'mago':
                ataque = 'magia';
                break;
            case 'guerreiro':
                ataque = 'espada';
                break;
            case 'monge':
                ataque = 'artes marciais';
                break;
            case 'ninja':
                ataque = 'shuriken';
                break;
            default:
                ataque = 'ataque gen√©rico';
        }

        const mensagem = `O ${this.tipo} ${this.nome} atacou usando ${ataque}`;
        console.log(mensagem);
    }
}


function criarHerois() {
    const herois = [];


    const heroi1 = new Heroi('Doutor Estranho', 25, 'mago');
    const heroi2 = new Heroi('Naruto', 30, 'guerreiro');
    const heroi3 = new Heroi('Kung Fu Panda', 22, 'monge');

   
    herois.push(heroi1, heroi2, heroi3);


    for (const heroi of herois) {
        heroi.atacar();
    }
}

criarHerois();
